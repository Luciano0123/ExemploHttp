<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExemploHttp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExemploHttp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ExemploHttp">

    <TabBar>
        <ShellContent
            Title="Post"
            ContentTemplate="{DataTemplate local:PostsView}"
            Route="MainPage" />

        <ShellContent
            Title="IMG"
            ContentTemplate="{DataTemplate local:PhotosView}"
            Route="IMGPage" />
    </TabBar>

</Shell>
